    <Border BorderBrush="#FF007ACC" Background="#FF2D2D30" BorderThickness="1" Margin="4">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" Color="#FF007ACC" BlurRadius="4" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
